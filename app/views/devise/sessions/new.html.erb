<div class="container">
  <h1 class="bg-success text-white text-center">ログイン</h1>
</div><br>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="container">
    <div class="row">      
      <div class="col-7">  
        <div class="field">
          <%= f.label :メールアドレス, class: "text-primary" %><br />
          <%= f.email_field :email, class:"form-control border-primary", autofocus: true, autocomplete: "email" %>
        </div>
      </div>
    </div>
  </div><br>   
  <div class="container">
    <div class="row">      
      <div class="col-7">  
        <div class="field">
          <%= f.label :パスワード, class: "text-primary" %><br />
          <%= f.password_field :password, class:"form-control border-primary", autocomplete: "current-password" %>
        </div>
      </div>
    </div>
    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :ログインを自動化する %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div><br>
  <div class="container">
    <div class="col-7">
      <div class="actions">
        <%= f.submit "ログイン", class: "btn btn-warning btn-lg float-right" %>
      </div>
    </div>
  </div> 
<% end %>


