<div class="container">
  <h1 class="bg-success text-white text-center">会員情報の変更</h1>
</div><br> 

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <div class="container">
    <%= render "devise/shared/error_messages", resource: resource %>
  </div>
  <div class="container">
    <div class="row">      
      <div class="col-5">
        <div class="field">
          <%= f.label :ニックネーム, class: "text-primary" %><br />
          <%= f.text_field :nickname, class:"form-control border-primary", autofocus: true %>
        </div>
      </div>
    </div>
  </div><br>
  <div class="container">
    <div class="row">      
      <div class="col-7">  
        <div class="field">
          <%= f.label :メールアドレス, class: "text-primary" %><br />
          <%= f.email_field :email, class:"form-control border-primary", autocomplete: "email" %>
        </div>
      </div>
    </div>
  </div><br>
  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>
  <div class="container">
    <div class="row">      
      <div class="col-7">  
        <div class="field text-primary">
          <%= f.label :新しいパスワード %>
          <% if @minimum_password_length %>
            <lavel>(<%= @minimum_password_length %>文字以上)</lavel>
          <% end %><br />
          <%= f.password_field :password, class:"form-control border-primary", autocomplete: "new-password" %>         
        </div>
      </div>
    </div>
  </div><br>
  <div class="container">
    <div class="row">      
      <div class="col-7"> 
        <div class="field">
          <%= f.label :もう1度新しいパスワードを入力してください, class:"text-primary" %><br />
          <%= f.password_field :password_confirmation, class:"form-control border-primary",　autocomplete: "new-password" %>
        </div>
      </div>
    </div>
  </div><br>
  <div class="container">
    <div class="row">      
      <div class="col-7"> 
        <div class="field text-primary">
          <%= f.label :現在のパスワード %><br /><lavel>(変更するには現在のパスワードが必要です)</lavel><br />
          <%= f.password_field :current_password, class:"form-control border-primary", autocomplete: "current-password" %>
        </div>
      </div>
    </div>
  </div><br>
  <div class="container">
    <label for="exampleInputVoiceActor" class="text-primary">好きな声優</label>
  </div>
  <div class="container">
    <div class="form-row">      
      <div class="col-4">          
        <select class="custom-select border-primary">
          <option selected>選択してください</option>
          <option>なまえ</option>
        </select>             
      </div>
      <div class="col-4">          
        <select class="custom-select border-primary">
          <option selected>選択してください</option>
          <option>なまえ</option>
        </select>             
      </div>
      <div class="col-4">          
        <select class="custom-select border-primary">
          <option selected>選択してください</option>
          <option>なまえ</option>
        </select>             
      </div>
    </div>
  </div><br>　
  <div class="container">
    <div class="row">
      <div class="col-7">
        <div class="actions">
          <%= f.submit "更新する", class: "btn btn-warning btn-lg float-right" %>
        </div>
      </div>
    </div>
  </div><br><br>
<% end %>
<div class="container">
  <h2 class="text-primary">アカウント取り消し</h2><br>
  <%= button_to "アカウントを取り消す", registration_path(resource_name), data: { confirm: "アカウントを取り消してもよろしいですか?" }, method: :delete, class: "btn btn-warning" %>
</div><br><br>
